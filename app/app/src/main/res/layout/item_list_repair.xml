<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    android:layout_marginTop="24dp"
    android:layout_marginRight="24dp"

    android:background="@drawable/roudedconers"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".controllers.RepairFragment">

    <TextView
        android:id="@+id/tVRepairDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksansbold"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="12sp"
        android:text="@string/tVRepairDate"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewRepairDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/worksans"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tVRepairType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksansbold"
        android:lineSpacingExtra="12sp"
        android:text="@string/ltVRepairType"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textViewRepairType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/worksans"
        android:lineSpacingExtra="12sp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tVRepairDescp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksansbold"
        android:lineSpacingExtra="12sp"
        android:text="@string/LtvRepairDescp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textViewRepairDescp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/worksans"
        android:lineSpacingExtra="12sp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tVRepairKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksansbold"
        android:lineSpacingExtra="12sp"
        android:text="@string/ltVRepairKm"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewRepairKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/worksans"
        android:lineSpacingExtra="12sp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tVRepairState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksansbold"
        android:lineSpacingExtra="12sp"
        android:text="@string/ltVRepairState"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewRepairState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksans"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>